mixin accordion(data)
    .accordion(data-accordion)
        .accordion__toggle(data-accordion-toggle)
            .accordion__title
                span=data.title
            .accordion__btn
        .accordion__content(data-accordion-content)
            .accordion__content-box
                if data.text
                    p=data.text
                else
                    block

