mixin breadcrumbs(...links)
    .breadcrumbs
        span.breadcrumbs__item
            a(href="/")
                span Главная
        each link, index in links
            if index + 1 < links.length
                span.breadcrumbs__item
                    a(href="#")
                        span= link
            else
                span.breadcrumbs__item
                    span= link